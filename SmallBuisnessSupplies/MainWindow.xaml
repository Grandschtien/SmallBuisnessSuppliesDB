            <Button Content="Сотрудники" Margin="0" Width="Auto" d:LayoutOverrides="Height"/>
            <Button Content="Каталог" Margin="10" Width="Auto" d:LayoutOverrides="Height"/>
            <Button Content="Склады" Margin="0" Width="Auto" d:LayoutOverrides="Height"/>
            <Button Content="Поставщики" Margin="10" Width="Auto" d:LayoutOverrides="Height"/>
        </StackPanel>
        <Label Content="Таблицы" HorizontalAlignment="Left"  Margin="61,60,0,0" VerticalAlignment="Top" Width="100" Height="30" HorizontalContentAlignment="Center" />
