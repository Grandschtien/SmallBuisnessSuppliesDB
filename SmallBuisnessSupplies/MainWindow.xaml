            <Button Content="Поставщики" Margin="10" Width="Auto" d:LayoutOverrides="Height" Click="Providers_Click"/>
        </StackPanel>
        <Label Content="Таблицы" HorizontalAlignment="Left"  Margin="61,60,0,0" VerticalAlignment="Top" Width="100" Height="30" HorizontalContentAlignment="Center" />
        <StackPanel HorizontalAlignment="Left" Height="292" Margin="275,95,0,0" VerticalAlignment="Top" Width="165">
            <Button Content="Клиенты" Margin="10" Width="Auto" d:LayoutOverrides="Height"/>
            <Button Content="Заказы" Margin="0" Width="Auto" d:LayoutOverrides="Height"/>
